<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand text-white" do %>
      Melodict
     <%# <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
          </li>
          <li class="nav-item dropdown ms-3">
            <% default_pic = "https://res.cloudinary.com/dto6yv11m/image/upload/v1646629326/profile_default_xhktvv.jpg" %>
            <%= cl_image_tag current_user.profile_picture.key.present? ? current_user.profile_picture.key : default_pic, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "View Profile", "#", class: "dropdown-item" %>
              <%= link_to "My exercises", "/exercises", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
      <% else %>
          <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
          </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
