<h1>Exercises#index</h1>
<p>Find me in app/views/exercises/index.html.erb</p>
























<ul>
  <% @exercises.each do |ex| %>
    <%= link_to exercises_path(@exercises), class: "remove-link-style" do %>

      <div class="teacher-exercise-card m-5">
        <i class="fas fa-circle fa-3x  d-flex align-items-center" data-toggle="popover" title="Popover title" data-content="A larger popover to demonstrate the max-width of the Bootstrap popover."></i>
        <div class="d-flex flex-column justify-content-center p-3 ms-4">
        <div class="d-flex flex-column justify-content-end p-3 ms-4">
        </div>
        </div>
        <div class="d-flex flex-grow-1 align-items-center justify-content-evenly me-5 ">
         <p class="mb-0 lw-text-header prog-realign mr-5"><%= ex.chord_progression %></p>
          <p class="ml-5 mb-0 lw-text-header"> <%=ex.name %></p>
        </div>
        <div class="d-flex flex-column justify-content-evenly p-3 ms-4">
      <%# <p class="mb-0 lw-text-header">Difficulty:</p> %>
            <% if ex.difficulty_string == "easy"  %>
              <p class="mb-0 lw-text-header text-center  text-primary ">
                Easy
              </p>
            <% end %>
            <% if ex.difficulty_string == "intermediate" %>
              <p class="mb-0 lw-text-header text-center  text-success">
                Intermediate
              </p>
            <% end %>
            <% if ex.difficulty_string == "hard" %>
              <p class="mb-0 lw-text-header text-center  text-danger">
                Hard
              </p>
            <% end %>
            <% if ex.difficulty_string == "insane" %>
              <p class="mb-0 lw-text-header text-center  text-danger">
                Insane
              </p>
            <% end %>

        </div>
      </div>
    <% end %>


  <% end %>
</ul>
