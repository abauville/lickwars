<div data-controller="score"
     id="score-controller"
     data-score-notes-value="<%= music.notes %>"
     data-score-bpm-value="<%= music.bpm %>">

  <button class="note-input-button" data-action="click->score#setNoteValue"><%= image_tag "https://res.cloudinary.com/dto6yv11m/image/upload/c_scale,w_60/v1646285265/sixteenth-note_unwb9y.jpg" %></button>
  <button class="note-input-button" data-action="click->score#setNoteValue"><%= image_tag "https://res.cloudinary.com/dto6yv11m/image/upload/c_scale,w_60/v1646285264/eighth-note_erdzte.jpg" %></button>
  <button class="note-input-button" data-action="click->score#setNoteValue"><%= image_tag "https://res.cloudinary.com/dto6yv11m/image/upload/c_scale,w_60/v1646285265/quarter-note_wbzr40.jpg" %></button>
  <button class="note-input-button" data-action="click->score#setNoteValue"><%= image_tag "https://res.cloudinary.com/dto6yv11m/image/upload/c_scale,w_60/v1646285265/half-note_uk6aeu.jpg" %></button>
  <button class="note-input-button" data-action="click->score#setNoteValue"><%= image_tag "https://res.cloudinary.com/dto6yv11m/image/upload/c_scale,w_60/v1646285265/whole-note_chdou4.jpg" %></button>
  <div class="d-flex justify-content-center align-items-center">
    <div class='play-button'
         title='play my input'
         data-action='click->score#playAttempt'>
         <i class='far fa-play-circle'></i>
    </div>

    <div id="score" data-score-target="score"></div>
    <p data-score-target="output"></p>
  </div>
</div>
