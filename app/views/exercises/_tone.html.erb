<div class="d-flex justify-content-center"
      id="tone-controller"
      data-controller="tone"
      data-tone-question-value="<%= @question_music.notes %>"
      data-tone-attempt-value=""
      data-tone-chords-value="<%= @question_music.chords %>"
      data-tone-bpm-value="<%= @question_music.bpm %>">
    <p class="lw-button lw-btn-sm text-center mb-0 mx-2" data-action="click->tone#play_attempt"><i class="far fa-play-circle play-button fa-1x"
      ></i> Attempt</p>
  <p class="lw-button lw-btn-sm text-center mb-0 mx-2" data-action="click->tone#play_question">Play Melody</p>
  <p class="lw-button lw-btn-sm text-center mb-0 mx-2">Check</p>
  <p class="lw-button lw-btn-sm text-center mb-0 mx-2" data-bs-toggle="modal" data-bs-target="#commentModal">Submit</p>
</div>
