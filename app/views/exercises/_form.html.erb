<%= simple_form_for @exercise do |f| %>
  <%= f.simple_fields_for :musics do |music| %>
  <div class="d-flex justify-content-between" >
    <div class="col-4 pt-2">
      <h6 class="text-center mt-3 w-50 new-exercise-title pt-2"><%= f.input :name, label: false, placeholder: "Exercise name" %>
      </h6>
    </div>

    <div class="col-1 text-center align-self-center" >
       <p class="lw-button text-center" data-bs-toggle="modal" data-bs-target="#helpModal"  >Help
      </p>
    </div>

    <div class= "col-4   mr-4 pt-2">

      <h6 class="text-center mt-3 w-50 new-exercise-title "> <%= f.input :description, label: false, placeholder: "Put short description here" %>
      </h6>
    </div>
  </div>
    <div class="text-center mx-5">
      <%= render "new_exercise_card" %>
    </div>
    <div class="container">
      <div class="col-8 offset-2 mb-2 mt-2 px-4">
        <div class="row">
          <div class="col-6">
          <%= f.input :difficulty, label: "Level", input_html: { min: 0, max: 10 },placeholder: "3" %>
          </div>
          <div class="col-6">
            <%= music.input :bpm, placeholder: "80",input_html: { min: 0, max: 300, value: 80 }  %>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit 'Submit', class: "lw-button lw-btn-lg mb-5"%>
    </div>
    <%= music.input :is_question, as: :hidden, input_html: {value: "true"} %>
    <%= music.input :user_id, as: :hidden, input_html: {value: current_user.id}%>
    <%= music.input :chords, as: :hidden, input_html: {value: "[]"}%>
    <%= music.input :notes, as: :hidden, input_html: {id: "form-notes-input"} %>
  <% end %>
<% end %>
