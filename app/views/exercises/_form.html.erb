<%= simple_form_for @exercise do |f| %>
  <%= f.simple_fields_for :musics do |music| %>
  <div class="d-flex justify-content-between" >
    <div class="col-4 pt-2">
      <div class="row">
        <h6 class="mt-3 w-75 new-exercise-title pt-2"><%= f.input :name, label: "Exercise Name", placeholder: "Fur Elise" %>
        </h6>
      </div>
      <div class="row">
        <h6 class="mt-3 w-75 new-exercise-title "> <%= f.input :description, label: "Description", placeholder: "Good exercise for practicing your scales" %>
        </h6>
      </div>
    </div>
    <div class="col-2 pt-2">
      <div class="row">
        <h6 class="mt-3 w-75 new-exercise-title pt-2"> <%= f.input :difficulty, label: "Difficulty", input_html: { min: 0, max: 10 },placeholder: "level (1-10)" %>
        </h6>
      </div>
      <div class="row">
        <h6 class="mt-3 w-75 new-exercise-title "><%= music.input :bpm, label: "Beats Per Minute", placeholder: "bpm (1-300)",input_html: { min: 0, max: 300}  %>

        </h6>
      </div>
    </div>


    <div class="col-6 mt-5">
      <div class="col-3 mt-5 offset-7">
        <p class="lw-button text-center" data-bs-toggle="modal" data-bs-target="#helpModal"  >Help
         </p>
      </div>
    </div>

  </div>
    <div class="text-center mx-5">
      <%= render "new_exercise_card" %>
    </div>
    <div class="container">
      <div class="col-8 offset-2 mb-2 mt-2 px-4">
        <div class="row">
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit 'Submit', class: "lw-button lw-btn-lg mb-5"%>
    </div>
    <%= music.input :is_question, as: :hidden, input_html: {value: "true"} %>
    <%= music.input :user_id, as: :hidden, input_html: {value: current_user.id}%>
    <%= music.input :chords, as: :hidden, input_html: {value: "[]"}%>
    <%= music.input :notes, as: :hidden, input_html: {id: "form-notes-input"} %>
  <% end %>
<% end %>
