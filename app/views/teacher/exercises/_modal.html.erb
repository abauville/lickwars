<div class="modal fade" id="commentModal<%=exercise.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog lw-modal-body modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= exercise.name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% exercise.reviews.each do |review| %>
          <%= render "review_card", {review: review} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
