<div class="teacher-exercise-card p-3 m-5">
  <div class="d-flex flex-column justify-content-evenly p-3 ms-4">
    <p class="mb-0 lw-text-header"><%= exercise.name %></p>
    <p class="mb-0 lw-text-description"><%= exercise.chord_progression %></p>
  </div>
  <div class="d-flex flex-grow-1 align-items-center justify-content-end me-5">
    <div class="teacher-ex-card-button me-3" data-bs-toggle="modal" data-bs-target="#commentModal<%=exercise.id%>">
      <p class="mb-0">View Comments</p>
    </div>
    <%= link_to edit_exercise_path(exercise), class: "teacher-ex-card-button" do %>
      <p class="mb-0">Edit</p>
    <% end %>
  </div>
</div>

<%= render "modal", {exercise: exercise} %>
